<Page x:Class="Inventory.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Inventory.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid Background="White">
        <StackPanel Orientation="Vertical" Width="400" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Margin="0 15"/>
            <TextBlock Text="Логин"/>
            <TextBox x:Name="LoginTextBox" HorizontalAlignment="Stretch" Style="{StaticResource PrimaryTextBox}"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox FontSize="16" x:Name="PasswordTextBox" HorizontalAlignment="Stretch"  Height="30" Background="#FF9CA1A2" Width="397"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0 15">
                <Button Style="{StaticResource PrimaryButton}" Content="Войти" Margin="0 0 10 0" Click="Button_Click_1"/>
                <Button Style="{StaticResource SecondButton}" Content="Регистрация" Margin="10 0 0 0" Click="Button_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
